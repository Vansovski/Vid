@model Vidly.ViewModel.FilmeGeneros
@{
    ViewData["Title"] = "Novo Filme";
  
}

<h1>@ViewData["Title"]</h1>


@using (Html.BeginForm("Salvar", "Filmes"))
{
    <div class="form-group my-2">
        @Html.LabelFor(m => m.Filme.Titlo)
        @Html.TextBoxFor(m => m.Filme.Titlo, new {@class = "form-control"})
    </div>
    <div class="form-group my-2">
        @Html.LabelFor(m => m.Filme.DataLancamento)
        @Html.TextBoxFor(m => m.Filme.DataLancamento, new {@class = "form-control "})

    </div>
    <div class="form-group my-2">
        @Html.LabelFor(m => m.Filme.Genero)
        @Html.DropDownListFor(m => m.Filme.GeneroId, new SelectList(Model.Generos,"Id","Nome"),"Selecionar Genero do Filme", new {@class="form-control"})
    </div>
    
    //Entrada do ID do cliente 
    @Html.HiddenFor(m => m.Filme.Id)
    <button type=“submit” class="btn btn-primary my-2">Salvar</button>
}


