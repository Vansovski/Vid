@model IEnumerable<Vidly.Models.Cliente>

@{
    ViewData["Title"] = "Clientes Cadastrados";
}

<h1>@ViewData["Title"]</h1>

@if(@Model != null)
{
    <div class="card">

        <table class="table table-hover">
            <tr >
                <th>Clientes</th>
                <th>Tipo de Membro</th>
                <th class="text-center">Desconto %</th>
            </tr>
            
            <tbody>
                @foreach(var cliente in @Model)
                {
                    <tr>
                        <td> @Html.ActionLink(cliente.Nome , "Detalhes", new { id = cliente.Id })</td>
                        <td> @cliente.MembroTipo.Nome</td>
                        <td class="text-center"> @cliente.MembroTipo.Desconto%</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h2> Nenhum Cliente Cadastrado!</h2>
}


